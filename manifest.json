
{
  "manifest_version": 3,
  "name": "LOCKBOX Password Generator",
  "version": "1.0",
  "description": "Generate super difficult passwords for your safety on the Internet",
  "action": {
    "default_popup": "popup.html",
    "default_popup_title": "LOCKBOX Password Generator"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "background.service_worker": {
    "scripts": ["program.js"]
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png",
    "256": "images/icon256.png"
  }

}
